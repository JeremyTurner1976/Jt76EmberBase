{{partial "pageHeader"}}

<div class="inbox-body jt76-padding-sides-md p-top-xs">
    
    {{partial "arrayButtonSet"}}

    {{pagination-display classNames="pagination-row clearfix m-bottom-sm" pagination=paginationData}}

    <div class="message-table table-responsive bg-light">
        <table class="table table-bordereds">
            <thead>
                <tr class="bg-dark">
                    <th class="col-sm-2 col-md-2">Created</th>
                    <th class="col-sm-4 col-md-4">Message</th>
                    <th class="col-sm-3 col-md-3 hidden-xs">Source and Level</th>
                    <th class="col-lg-3 hidden-xs hidden-sm hidden-md">Additional Information</th>
                </tr>
            </thead>
            <tbody>
                {{#each item in displayModel}}
                <tr>
                    <td class="col-sm-2 col-md-2">
                        <div class="jt76-multiline">{{item.strCreated}}</div>
                    </td>
                    <td class="col-sm-4 col-md-4">
                        {{#link-to "index.admin.errorDetails" item}}<div class="jt76-title-link jt76-multiline">{{item.strMessage}}</div>{{/link-to}}
                    </td>
                    <td class="col-sm-3 col-md-3 hidden-xs">
                        <div class="jt76-multiline">{{item.strSource}} {{item.strErrorLevel}}</div>
                    </td>
                    <td class="col-sm-3 col-md-3 hidden-xs hidden-sm hidden-md">
                        <div class="jt76-multiline">{{item.strAdditionalInformation}}</div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    {{pagination-display classNames="pagination-row clearfix m-bottom-sm" pagination=paginationData}}

</div>

